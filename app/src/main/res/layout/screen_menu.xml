<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_group__1_"
        tools:layout_editor_absoluteX="-64dp"
        tools:layout_editor_absoluteY="207dp" />

    <ImageView
        android:id="@+id/bg_play_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintWidth_percent="0.9" />


    <TextView
        android:id="@+id/play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/play_bt"
        android:fontFamily="@font/arbutus"
        android:gravity="center"
        android:text="Играть"
        android:textColor="@color/realWhite"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bg_play_white"
        app:layout_constraintLeft_toLeftOf="@id/bg_play_white"
        app:layout_constraintRight_toRightOf="@id/bg_play_white"
        app:layout_constraintTop_toTopOf="@id/bg_play_white" />


    <ImageView
        android:id="@+id/bg_settings_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg_white"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_play_white"
        app:layout_constraintWidth_percent="0.9" />


    <TextView
        android:id="@+id/achivement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_double_chanse"
        android:fontFamily="@font/arbutus"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Достижение"
        android:textColor="@color/realWhite"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bg_settings_white"
        app:layout_constraintLeft_toLeftOf="@id/bg_settings_white"
        app:layout_constraintRight_toLeftOf="@id/shop"
        app:layout_constraintTop_toTopOf="@id/bg_settings_white" />


    <ImageView
        android:id="@+id/achivementIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_achivements"
        app:layout_constraintBottom_toBottomOf="@id/achivement"
        app:layout_constraintLeft_toLeftOf="@id/achivement"
        app:layout_constraintRight_toRightOf="@id/achivement" />

    <TextView
        android:id="@+id/shop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_next_question"
        android:fontFamily="@font/arbutus"
        android:text=" Mагазин"
        android:textColor="@color/realWhite"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bg_settings_white"
        app:layout_constraintLeft_toRightOf="@id/achivement"
        app:layout_constraintRight_toRightOf="@id/bg_settings_white"
        app:layout_constraintTop_toTopOf="@id/bg_settings_white"
        app:layout_constraintWidth_percent="0.5" />


    <ImageView
        android:id="@+id/shopIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shoping"
        app:layout_constraintBottom_toBottomOf="@id/shop"
        app:layout_constraintLeft_toLeftOf="@id/shop"
        app:layout_constraintRight_toRightOf="@id/shop" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImage"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/realWhite"
        android:src="@drawable/ic_math"
        app:civ_border_color="@color/realWhite"
        app:civ_border_width="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:padding="5dp"
        android:text="Player #12345"
        android:textColor="@color/realBlack"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@id/circleImage" />


    <TextView
        android:id="@+id/playerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:padding="5dp"
        android:text="Player #12345"
        android:textColor="@color/realBlack"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@id/circleImage" />


    <TextView
        android:id="@+id/starsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:drawableStart="@drawable/ic_strars"
        android:gravity="center"
        android:padding="5dp"
        android:text="  12345"
        android:textColor="@color/realBlack"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@id/play"
        app:layout_constraintLeft_toLeftOf="@id/playerText"
        app:layout_constraintRight_toLeftOf="@id/level"
        app:layout_constraintTop_toBottomOf="@id/playerText" />


    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:text=" Lvl. 12 "
        android:textColor="@color/realBlack"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@id/play"
        app:layout_constraintLeft_toRightOf="@id/starsCount"
        app:layout_constraintRight_toLeftOf="@id/healthCount"
        app:layout_constraintTop_toBottomOf="@id/playerText" />


    <TextView
        android:id="@+id/healthCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:drawableStart="@drawable/ic_heart"
        android:gravity="center"
        android:padding="5dp"
        android:text="  12345"
        android:textColor="@color/realBlack"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@id/play"
        app:layout_constraintLeft_toRightOf="@id/level"
        app:layout_constraintRight_toRightOf="@id/playerText"
        app:layout_constraintTop_toBottomOf="@id/playerText" />


</androidx.constraintlayout.widget.ConstraintLayout>