<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bg"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/bg_play_white"
        android:src="@drawable/bg_white"
        android:layout_width="0dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"/>


    <TextView
        android:id="@+id/play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/play_bt"
        android:fontFamily="@font/arbutus"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Играть"
        android:textColor="@color/realWhite"
        android:textSize="33dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_play_white"
        app:layout_constraintLeft_toLeftOf="@id/bg_play_white"
        app:layout_constraintRight_toLeftOf="@id/map_levels"
        app:layout_constraintTop_toTopOf="@id/bg_play_white"
        app:layout_constraintWidth_percent="0.5" />


    <TextView
        android:id="@+id/map_levels"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/arbutus"
        android:textStyle="bold"
        android:padding="3dp"
        android:text=" Карта \n уровней"
        android:textColor="@color/realWhite"
        android:textSize="19sp"
        android:background="@drawable/bg_fifty_fifty"
        app:layout_constraintLeft_toRightOf="@id/play"
        app:layout_constraintRight_toRightOf="@id/bg_play_white"
        app:layout_constraintBottom_toBottomOf="@id/bg_play_white"
        app:layout_constraintTop_toTopOf="@id/bg_play_white"
        android:layout_height="0dp"/>


    <ImageView
        android:id="@+id/bg_settings_white"
        android:src="@drawable/bg_white"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_play_white"
        android:layout_height="0dp"/>




    <TextView
        android:id="@+id/achivement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/play_bt"
        android:fontFamily="@font/arbutus"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Достижение"
        android:textColor="@color/realWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/bg_settings_white"
        app:layout_constraintLeft_toLeftOf="@id/bg_settings_white"
        app:layout_constraintRight_toLeftOf="@id/shop"
        app:layout_constraintTop_toTopOf="@id/bg_settings_white" />


    <TextView
        android:id="@+id/shop"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/arbutus"
        android:textStyle="bold"
        android:text=" Карта \n уровней"
        android:textColor="@color/realWhite"
        android:textSize="27sp"
        app:layout_constraintWidth_percent="0.5"
        android:background="@drawable/bg_next_question"
        app:layout_constraintLeft_toRightOf="@id/achivement"
        app:layout_constraintRight_toRightOf="@id/bg_settings_white"
        app:layout_constraintBottom_toBottomOf="@id/bg_settings_white"
        app:layout_constraintTop_toTopOf="@id/bg_settings_white"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>